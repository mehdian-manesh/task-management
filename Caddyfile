# Serve by domain (HTTP + HTTPS); use self-signed cert for .local
{env.DOMAIN} {
    tls internal

    # Backend API
    handle_path /api/* {
        reverse_proxy task-management-backend:8000
    }

    # Media files served by Django
    handle /media/* {
        reverse_proxy task-management-backend:8000
    }

    # Frontend (nginx on port 80)
    handle {
        reverse_proxy task-management-frontend:80
    }

    encode gzip

    header {
        Permissions-Policy "interest-cohort=()"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}
