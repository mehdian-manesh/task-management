# Disable automatic HTTPS and HTTP→HTTPS redirect (serve HTTP by IP or behind external proxy)
# After changing this file on the server, run: docker compose -f docker-compose.prod.yml restart task-management-reverse-proxy
{
    auto_https off
}

# Port 80: serve HTTP for any host (IP or domain) — no redirect
:80 {
    # Backend API (use handle so /api is forwarded; handle_path would strip it)
    handle /api/* {
        reverse_proxy task-management-backend:8000
    }

    # Media files served by Django
    handle /media/* {
        reverse_proxy task-management-backend:8000
    }

    # Frontend (nginx on port 80)
    handle {
        reverse_proxy task-management-frontend:80
    }

    encode gzip

    header {
        Permissions-Policy "interest-cohort=()"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}

# HTTPS: only when DOMAIN is set and TLS is terminated here (e.g. Caddy with tls internal)
https://{env.DOMAIN} {
    tls internal

    # Backend API (use handle so /api is forwarded; handle_path would strip it)
    handle /api/* {
        reverse_proxy task-management-backend:8000
    }

    # Media files served by Django
    handle /media/* {
        reverse_proxy task-management-backend:8000
    }

    # Frontend (nginx on port 80)
    handle {
        reverse_proxy task-management-frontend:80
    }

    encode gzip

    header {
        Permissions-Policy "interest-cohort=()"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}
